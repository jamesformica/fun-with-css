- @name = "loader"

- @bg_colour = "white"

- @elements = 	"<div class='outer-loader'>"\
				"	<div class='inner-loader'></div>"\
				"</div>"

- @styles = ".outer-loader {\n"\
			"  width: 200px;\n"\
			"  height: 200px;\n"\
			"  border-radius: 50%;\n"\
			"  border: 10px solid transparent;\n"\
			"  border-top-color: #2b90d9;\n"\
			"  border-bottom-color: #2b90d9;\n"\
			"  text-align: center;\n"\
			"  animation-name: spin-one-way;\n"\
			"  animation-duration: 1s;\n"\
			"  animation-iteration-count: infinite;\n"\
			"  display: flex;\n"\
  			"  justify-content: center;\n"\
  			"  align-items: center;\n"\
			"}\n\n"\
			".inner-loader {\n"\
			"  width: 150px;\n"\
			"  height: 150px;\n"\
			"  border-radius: 50%;\n"\
			"  border: 8px solid transparent;\n"\
			"  border-top-color: #ff5f2e;\n"\
			"  border-bottom-color: #ff5f2e;\n"\
			"  animation-name: spin-the-other;\n"\
			"  animation-duration: 1.4s;\n"\
			"  animation-iteration-count: infinite;\n"\
			"}\n\n"\
			"@keyframes spin-one-way {\n"\
			"  0% {transform: rotate(0deg); }\n"\
			"  100% {transform: rotate(360deg); }\n"\
			"}\n\n"\
			"@keyframes spin-the-other {\n"\
			"  0% {transform: rotate(0deg); }\n"\
			"  100% {transform: rotate(-720deg); }\n"\
			"}"